<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.ac.uc.webchatting.dao.IChatRoomDAO">
    <insert id="insertChatRoom" parameterType="kr.ac.uc.webchatting.dto.ChatRoomDTO">
        insert into chat_room(room_name, master_id, total_people, public_open)
                    values (#{room_name}, #{master_id}, #{total_people}, #{public_open});
    </insert>
    
    <select id="publicRoomList" resultType="kr.ac.uc.webchatting.dto.ChatRoomDTO">
        select * from chat_room where public_open = 1
    </select>
</mapper>